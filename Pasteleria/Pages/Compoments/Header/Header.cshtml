@page "/Header"
@model Pasteleria.Pages.Compoments.HeaderModel
@using Pasteleria

@{
	var url = Url.ActionLink();
	Resource rs = ResourceConfig.Resources;
	Menu menu = new();


	if (url.EndsWith("/") || url.Contains(rs.HOMEurl))
	{
		menu = rs.Menu.First(x => x.Url == rs.HOMEurl );

	} else
	{
		foreach (var item in rs.Menu)
		{
			if (url.Contains(item.Url))
			{
				menu = rs.Menu.First(x => x.Url == item.Url);
				break;
			}
		}
	}
}


<!-- HEADER =============================-->
<header class="item header margin-top-0">
<div class="wrapper">
	<nav role="navigation" class="navbar navbar-white navbar-embossed navbar-lg navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<button data-target="#navbar-collapse-02" data-toggle="collapse" class="navbar-toggle" type="button">
			<i class="fa fa-bars"></i>
			<span class="sr-only">Toggle navigation</span>
			</button>
			<a asp-area="" asp-page="Index" class="navbar-brand brand"> @(Resource.appName) </a>

			@*<environment include="Development">*@
				<small> @(Resource.appVersion) </small>
			@*</environment>*@
			
		</div>
		<div id="navbar-collapse-02" class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">

				@foreach(var menuOptions in rs.Menu.Where(x=>x.Active==1)){
					<li class="propClone"><a asp-area="" asp-page="@menuOptions.Url">@menuOptions.Name</a></li>
				}

			</ul>
		</div>
	</div>
	</nav>
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				
				@if (!String.IsNullOrWhiteSpace(menu.Title2))
				{
					<div class="text-homeimage">
						<div class="maintext-image" data-scrollreveal="enter top over 1.5s after 0.1s">
							<img src="~/templete/images/logo.png" width="150px" height="150px" /> @menu.Title1
						</div>
						<div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.3s">
							 @menu.Title2
						</div>
					</div>	

				}else{
					<div class="text-pageheader">
						<div class="subtext-image" data-scrollreveal="enter bottom over 1.7s after 0.1s">
							 @menu.Title1
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
</header>
